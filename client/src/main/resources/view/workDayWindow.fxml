<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import ChildCareTech.utils.RestrictedDatePicker?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ChildCareTech.controller.WorkDayController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0">
    <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
          prefWidth="100.0">
        <children>
            <RestrictedDatePicker fx:id="workDayDatePicker" onAction="#updateTable">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0"/>
                </VBox.margin>
            </RestrictedDatePicker>
            <Button fx:id="backButton" onAction="#backButtonAction" maxHeight="-Infinity" maxWidth="-Infinity"
                    minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="80.0"
                    prefWidth="80.0" text="&lt;--">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0"/>
                </VBox.margin>
            </Button>
        </children>
    </VBox>
    <TableView fx:id="eventsTable" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity"
               prefHeight="600.0" prefWidth="900.0" editable="true" AnchorPane.rightAnchor="0.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Nome">
                <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="beginTimeColumn" prefWidth="300.0" text="Orario di inizio">
                <cellValueFactory><PropertyValueFactory property="beginTime" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="endTimeColumn" prefWidth="100.0" text="Orario di fine">
                <cellValueFactory><PropertyValueFactory property="endTime" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="eventStatusColumn" prefWidth="100.0" text="Stato">
                <cellValueFactory><PropertyValueFactory property="eventStatus" /></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</AnchorPane>
