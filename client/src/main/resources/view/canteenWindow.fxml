<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableView?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
      prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ChildCareTech.controller.CanteenController">
    <children>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
              prefWidth="100.0">
            <children>
                <Button fx:id="addButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#addButtonAction" prefHeight="80.0"
                        prefWidth="80.0" text="ADD">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="backButton" onAction="#backButtonAction" maxHeight="-Infinity" maxWidth="-Infinity"
                        minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="80.0"
                        prefWidth="80.0" text="&lt;--">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
              prefWidth="900.0">
            <ComboBox fx:id="selectCanteen" onAction="#changeSelectedCanteen"/>
            <TableView fx:id="mealsDataTable">
                <columns>
                    <TableColumn fx:id="dayColumn" text="Data">
                        <cellValueFactory><PropertyValueFactory property="day" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="entryTimeColumn" text="Orario d'inizio">
                        <cellValueFactory><PropertyValueFactory property="entryTime" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="exitTimeColumn" text="Orario di fine">
                        <cellValueFactory><PropertyValueFactory property="exitTime" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="statusColumn" text="Stato">
                        <cellValueFactory><PropertyValueFactory property="status" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="menuListColumn" text="Menu">
                        <cellValueFactory><PropertyValueFactory property="menuList" /></cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </children>
</HBox>


