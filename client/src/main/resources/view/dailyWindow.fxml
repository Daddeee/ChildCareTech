<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ChildCareTech.controller.DailyController"
      prefHeight="700.0" prefWidth="900.0">
    <children>
        <VBox layoutX="50.0" layoutY="87.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="900.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="dateLabel">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="clockLabel">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Label>

                <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="80.0" prefWidth="80.0" text="&lt;--">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                    <font>
                        <Font size="9.0" />
                    </font>
                </Button>
            </children>

            <TableView fx:id="dailyEventDataTable" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity"
                       prefHeight="680.0" prefWidth="880.0">
                <columns>
                    <TableColumn prefWidth="220.0" text="Nome">
                        <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="220.0" text="Inizio">
                        <cellValueFactory><PropertyValueFactory property="start" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="220.0" text="Fine">
                        <cellValueFactory><PropertyValueFactory property="stop" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="220.0" text="Stato">
                        <cellValueFactory><PropertyValueFactory property="status" /></cellValueFactory>
                    </TableColumn>
                </columns>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </TableView>

        </VBox>
    </children>
</VBox>
