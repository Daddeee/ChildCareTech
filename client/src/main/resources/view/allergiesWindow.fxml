<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ChildCareTech.controller.AllergiesController"
      prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <ComboBox fx:id="availableAllergies"/>
        <Button fx:id="addAllergy" text="Aggiungi" onAction="#addAllergyButtonAction"/>
    </HBox>

    <TableView fx:id="foodsTable" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nome">
                <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
            </TableColumn>
        </columns>
        <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </HBox.margin>
    </TableView>
</VBox>
