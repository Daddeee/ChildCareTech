<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ChildCareTech.controller.ShowTripController"
      prefHeight="600.0" prefWidth="600.0">
    <HBox>
        <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="100.0" text="Meta:">
        </Label>
        <Label fx:id="metaField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="100.0">
        </Label>
    </HBox>
    <HBox>
        <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="100.0" text="Note:">
        </Label>
        <Label fx:id="noteField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="100.0">
        </Label>
    </HBox>
    <HBox>
        <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="100.0" text="Data partenza:">
        </Label>
        <Label fx:id="depDateField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="100.0">
        </Label>
    </HBox>
    <HBox>
        <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="100.0" text="Data arrivo:">
        </Label>
        <Label fx:id="arrDateField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="100.0">
        </Label>
    </HBox>

    <TableView fx:id="routesTable" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity"
               prefHeight="100.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="departureLocationColumn" prefWidth="200.0" text="Luogo di partenza">
                <cellValueFactory><PropertyValueFactory property="departureLocation" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="arrivalLocationColumn" prefWidth="200.0" text="Luogo di arrivo">
                <cellValueFactory><PropertyValueFactory property="arrivalLocation" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="routeNumberColumn" prefWidth="100.0" text="Numero tratta">
                <cellValueFactory><PropertyValueFactory property="routeNumber"/></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
