<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
      prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ChildCareTech.controller.DishController">
    <children>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
              prefWidth="100.0">
            <children>
                <Button fx:id="addDishButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#addDishButtonAction" prefHeight="80.0"
                        prefWidth="80.0" text="Nuovo Piatto">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="backButton" onAction="#backButtonAction" maxHeight="-Infinity" maxWidth="-Infinity"
                        minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="80.0"
                        prefWidth="80.0" text="&lt;--">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
        <VBox>
            <TableView fx:id="dishesTable" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity"
                       prefHeight="700.0" prefWidth="900.0">
                <columns>
                    <TableColumn text="Nome">
                        <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </children>
</HBox>

