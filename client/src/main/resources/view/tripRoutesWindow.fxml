<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ChildCareTech.controller.TripRoutesController"
            prefHeight="400.0" prefWidth="800.0">

    <HBox>
        <TableView fx:id="routesTable" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity"
                   prefHeight="400.0" prefWidth="500.0" editable="true">
            <columns>
                <TableColumn fx:id="departureLocationColumn" prefWidth="125.0" text="Luogo di partenza">
                    <cellValueFactory><PropertyValueFactory property="departureLocation" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="arrivalLocationColumn" prefWidth="125.0" text="Luogo di arrivo">
                    <cellValueFactory><PropertyValueFactory property="arrivalLocation" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="routeNumberColumn" prefWidth="125.0" text="numero tratta">
                    <cellValueFactory><PropertyValueFactory property="routeNumber" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="statusColumn" prefWidth="125.0" text="Stato">
                    <cellValueFactory><PropertyValueFactory property="status"/></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <VBox prefHeight="400.0" prefWidth="300.0">
            <Button fx:id="startEvent" onAction="#startEventButtonAction"/>
            <Button fx:id="stopEvent" onAction="#stopEventButtonAction"/>
        </VBox>
    </HBox>
</AnchorPane>
