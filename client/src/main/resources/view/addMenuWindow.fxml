<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ChildCareTech.controller.AddMenuController"
      prefHeight="450.0" prefWidth="600.0">
    <HBox>
        <TableView fx:id="availableDishesTable" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity"
                   prefHeight="400.0" prefWidth="250.0">
            <columns>
                <TableColumn text="Nome">
                    <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity"
              prefHeight="400.0" prefWidth="100.0">
            <VBox prefWidth="100">
                <Button onAction="#addDishButtonAction" text="&gt;"/>
                <Button onAction="#removeDishButtonAction" text="&lt;"/>
            </VBox>
        </VBox>

        <TableView fx:id="selectedDishesTable" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity"
                   prefHeight="400.0" prefWidth="250.0">
            <columns>
                <TableColumn text="Nome">
                    <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </HBox>
    <Button fx:id="saveButton" text="Salva" onAction="#saveButtonAction"/>
</VBox>
