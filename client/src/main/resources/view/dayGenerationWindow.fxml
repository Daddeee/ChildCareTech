<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ChildCareTech.controller.DayGenerationController"
      prefHeight="400.0" prefWidth="600.0">
    <Label text="Primo avvio del software. Specificare i parametri per la generazione dei giorni"/>

    <HBox>
        <Label text="Numero di settimane da generare:"/>
        <TextField fx:id="weekNumberField"/>
    </HBox>

    <HBox>
        <Label text="Orario di ingresso:"/>
        <TextField fx:id="entryTimeField"/>
    </HBox>

    <HBox>
        <Label text="Orario di uscita:"/>
        <TextField fx:id="exitTimeField"/>
    </HBox>

    <VBox>
        <Label text="Seleziona giorni di vacanza"/>
        <HBox>
            <Label text="Lun" contentDisplay="TOP">
                <graphic>
                    <RadioButton fx:id="lunHoliday"/>
                </graphic>
            </Label>
            <Label text="Mar" contentDisplay="TOP">
                <graphic>
                    <RadioButton fx:id="marHoliday"/>
                </graphic>
            </Label>
            <Label text="Mer" contentDisplay="TOP">
                <graphic>
                    <RadioButton fx:id="merHoliday"/>
                </graphic>
            </Label>
            <Label text="Gio" contentDisplay="TOP">
                <graphic>
                    <RadioButton fx:id="gioHoliday"/>
                </graphic>
            </Label>
            <Label text="Ven" contentDisplay="TOP">
                <graphic>
                    <RadioButton fx:id="venHoliday"/>
                </graphic>
            </Label>
            <Label text="Sab" contentDisplay="TOP">
                <graphic>
                    <RadioButton fx:id="sabHoliday"/>
                </graphic>
            </Label>
            <Label text="Dom" contentDisplay="TOP">
                <graphic>
                    <RadioButton fx:id="domHoliday"/>
                </graphic>
            </Label>
        </HBox>
    </VBox>

    <Button text="Salva e prosegui" onAction="#saveButtonAction"/>
</VBox>
