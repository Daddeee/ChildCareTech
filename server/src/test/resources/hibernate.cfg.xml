<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name = "hibernate.dialect">
            org.hibernate.dialect.MariaDBDialect
        </property>

        <property name = "hibernate.connection.driver_class">
            org.mariadb.jdbc.Driver
        </property>

        <property name = "hibernate.connection.url">
            jdbc:mysql://localhost/test?createDatabaseIfNotExist=true
        </property>

        <property name="hibernate.hbm2ddl.auto">
            update
        </property>

        <property name = "hibernate.connection.username">
            root
        </property>

        <property name = "hibernate.connection.password">
            root
        </property>

        <property name="connection.autocommit">
            true
        </property>

        <property name="show_sql">
            true
        </property>

        <!-- List of mapped entities -->
        <mapping class="ChildCareTech.model.Person"/>
        <mapping class="ChildCareTech.model.Adult"/>
        <mapping class="ChildCareTech.model.Pediatrist"/>
        <mapping class="ChildCareTech.model.Supplier"/>
        <mapping class="ChildCareTech.model.Staff"/>
        <mapping class="ChildCareTech.model.Kid"/>
        <mapping class="ChildCareTech.model.Canteen"/>
        <mapping class="ChildCareTech.model.Meal"/>
        <mapping class="ChildCareTech.model.Dish"/>
        <mapping class="ChildCareTech.model.Drink"/>
        <mapping class="ChildCareTech.model.Food"/>
        <mapping class="ChildCareTech.model.Menu"/>
        <mapping class="ChildCareTech.model.Supply"/>
        <mapping class="ChildCareTech.model.WorkDay"/>
        <mapping class="ChildCareTech.model.Event"/>
        <mapping class="ChildCareTech.model.Trip"/>
        <mapping class="ChildCareTech.model.Bus"/>
        <mapping class="ChildCareTech.model.Stop"/>
        <mapping class="ChildCareTech.model.TripPartecipation"/>

    </session-factory>
</hibernate-configuration>